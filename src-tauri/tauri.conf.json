{
  "productName": "Sorcery Desktop",
  "version": "0.1.0",
  "identifier": "com.srcuri.desktop",
  "build": {
    "frontendDist": "../public"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "exceptionDomain": null
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main app capabilities",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "core:window:allow-close",
            "shell:default",
            "dialog:default",
            "dialog:allow-open",
            "fs:default",
            "fs:allow-exists",
            "fs:allow-read-dir",
            "fs:allow-read-file"
          ]
        }
      ]
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["srcuri"]
      }
    }
  }
}
